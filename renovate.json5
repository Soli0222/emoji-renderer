{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  timezone: 'Asia/Tokyo',
  prConcurrentLimit: 20,
  prHourlyLimit: 10,
  "reviewers": [
    "Soli0222"
  ],
  semanticCommits: 'enabled',
  prCreation: 'immediate',
  rebaseWhen: 'auto',
  dependencyDashboard: true,
  vulnerabilityAlerts: {
    enabled: true,
    labels: [
      'security',
    ],
  },
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/^.github/workflows/.*.ya?ml$/',
      ],
      matchStrings: [
        'python-version:\\s*[\'"]?(?<currentValue>[^\'"\\s]+)[\'"]?',
      ],
      depNameTemplate: 'python',
      datasourceTemplate: 'docker',
    },
  ],
  packageRules: [
    {
      matchDepNames: ['python'],
      groupName: 'python version',
      automerge: false,
    },
    {
      matchManagers: [
        'github-actions',
      ],
      commitMessageTopic: 'GitHub Action {{depName}}',
      automerge: true,
    },
    {
      matchManagers: [
        'pip_requirements',
      ],
      commitMessageTopic: 'Python {{depName}}',
      automerge: false,
    },
    {
      matchManagers: [
        'docker-compose',
        'dockerfile',
      ],
      matchDepNames: [
        '!python',
      ],
      commitMessageTopic: 'Docker {{depName}}',
      automerge: false,
    },
  ],
}
