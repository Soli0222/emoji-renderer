# Emoji Renderer Service - Environment Configuration

# Logging level (debug, info, warning, error)
LOG_LEVEL=INFO

# Maximum text length allowed
MAX_TEXT_LENGTH=20

# Maximum output image size in KB
MAX_IMAGE_SIZE_KB=1024

# Default font ID (must exist in font directory)
DEFAULT_FONT_ID=noto_sans_jp_bold

# Font directory path
FONT_DIRECTORY=./assets/fonts

# Server settings
HOST=0.0.0.0
PORT=8000
